---
export interface Props {
  title?: string;
  message?: string;
  retry?: boolean;
}

const {
  title = 'Something went wrong',
  message = 'We couldn\'t load the facts. Please try again later.',
  retry = true
} = Astro.props;
---

<div class="error-container">
  <div class="error-icon">âš </div>
  <h2 class="error-title">{title}</h2>
  <p class="error-message">{message}</p>
  {retry && (
    <button class="retry-button" onclick="window.location.reload()">
      Try Again
    </button>
  )}
</div>

<style>
  .error-container {
    max-width: 600px;
    margin: 4rem auto;
    padding: 3rem;
    text-align: center;
    background: var(--white);
    border: 2px solid var(--grey-lighter);
    border-radius: 8px;
  }

  .error-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    opacity: 0.3;
  }

  .error-title {
    font-family: var(--serif);
    font-size: 2rem;
    font-weight: 300;
    color: var(--black);
    margin-bottom: 1rem;
    font-variation-settings: "opsz" 48;
  }

  .error-message {
    font-family: var(--sans);
    font-size: 1.125rem;
    color: var(--grey);
    line-height: 1.65;
    margin-bottom: 2rem;
  }

  .retry-button {
    font-family: var(--mono);
    font-size: 0.875rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 1rem 2rem;
    background: var(--accent);
    color: var(--white);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .retry-button:hover {
    background: var(--accent-dark);
    transform: translateY(-2px);
  }

  .retry-button:active {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .error-container {
      margin: 2rem 1.5rem;
      padding: 2rem;
    }

    .error-title {
      font-size: 1.5rem;
    }

    .error-message {
      font-size: 1rem;
    }
  }
</style>
